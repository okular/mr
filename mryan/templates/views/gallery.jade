extends ../layouts/default

//block intro
	.container
		h1 Gallery
	
block content
	.container: .row
		.right.col-lg-12
			.col-sm-12.col-lg-12
				if galleries.length
					each gallery in galleries
						h2= gallery.name
							if gallery.publishedDate
								.pull-right.text-muted= gallery._.publishedDate.format('Do MMM YYYY')
						
						.row.gallery-images
							if gallery.heroImage.exists
								each image in gallery.images
									.col-sm-4.col-md-4.gallery-image#img-lrg: img(src=gallery._.heroImage.limit(680,680)).img
								each image in gallery.images
									.col-sm-4.col-md-4.gallery-image#img-lrg: img(src=image.limit(680,680)).img
									//each image in gallery.images
										//.col-xs-4.col-sm-4.col-md-3.gallery-image: img(src=image.limit(680,680)).img
							else
								each image in gallery.images
									.col-sm-4.col-md-4.gallery-image#img-lrg: img(src=image.limit(880,680)).img
				else
					h3.text-muted There are no image galleries yet.